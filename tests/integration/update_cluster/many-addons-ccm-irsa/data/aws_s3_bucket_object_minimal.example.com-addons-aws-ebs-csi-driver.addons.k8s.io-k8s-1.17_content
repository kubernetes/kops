apiVersion: apps/v1
kind: Deployment
metadata:
  creationTimestamp: null
  labels:
    addon.kops.k8s.io/name: aws-ebs-csi-driver.addons.k8s.io
    app.kubernetes.io/instance: aws-ebs-csi-driver
