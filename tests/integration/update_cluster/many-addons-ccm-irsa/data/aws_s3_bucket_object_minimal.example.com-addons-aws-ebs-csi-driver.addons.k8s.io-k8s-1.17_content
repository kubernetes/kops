        - name: ADDRESS
          value: /var/lib/csi/sockets/pluginproxy/csi.sock
        - name: AWS_ROLE_ARN
          value: arn:aws-test:iam::123456789012:role/ebs-csi-controller-sa.kube-system.sa.minimal.example.com
        - name: AWS_WEB_IDENTITY_TOKEN_FILE
