go_library(
    name = "go_default_library",
    srcs = [
        "types.go",
    ] + select({
        "@io_bazel_rules_go//go/platform:linux_amd64": [
            "fs.go",
        ],
        "//conditions:default": [],
    }),
    importpath = "github.com/google/cadvisor/fs",
    visibility = ["//visibility:public"],
