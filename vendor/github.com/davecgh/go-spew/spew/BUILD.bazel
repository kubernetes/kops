    data = glob(["testdata/**"]),
    library = ":go_default_library",
)

go_test(
    name = "go_default_xtest",
    srcs = [
        "common_test.go",
        "dump_test.go",
        "dumpnocgo_test.go",
        "example_test.go",
        "format_test.go",
        "spew_test.go",
