load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "go_default_library",
    srcs = [
        "idna.go",
        "punycode.go",
        "tables.go",
        "trie.go",
        "trieval.go",
    ],
    visibility = ["//visibility:public"],
    deps = [
        "//vendor/golang.org/x/text/secure/bidirule:go_default_library",
