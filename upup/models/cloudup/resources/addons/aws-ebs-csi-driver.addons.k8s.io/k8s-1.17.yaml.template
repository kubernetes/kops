            - --k8s-tag-cluster-id={{ ClusterName }}
            - --extra-tags={{ CsiExtraTags }}
            - --v=5
          env:
            - name: CSI_ENDPOINT
              value: unix:///var/lib/csi/sockets/pluginproxy/csi.sock
